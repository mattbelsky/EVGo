<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_distance_default"
        android:inputType="numberDecimal"
        android:key="@string/pref_distance_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_distance_label" />

    <ListPreference
        android:key="@string/pref_distance_unit_key"
        android:entries="@array/pref_distance_unit_labels"
        android:entryValues="@array/pref_distance_unit_values"
        android:title="@string/pref_distance_unit_label" />

</PreferenceScreen>